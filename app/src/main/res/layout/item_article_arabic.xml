<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="2dp"
    app:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white">

        <!--Image view for displaying our image-->

        <!--Text view for displaying our text -->
        <ImageView
            android:id="@+id/articleImage"
            android:layout_width="152dp"
            android:layout_height="192dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/loading"
            android:padding="3dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/webTitle"
            android:layout_width="221dp"
            android:layout_height="47dp"
            android:layout_marginStart="-384dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/articleImage"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/webPublicationDate"
            android:layout_width="224dp"
            android:layout_height="47dp"
            android:layout_marginStart="-385dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/articleImage"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/description"
            android:layout_width="216dp"
            android:layout_height="91dp"
            android:layout_marginStart="-381dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@id/articleImage"
            android:padding="3dp"
            android:textAlignment="center"
            android:textColor="#000000" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
